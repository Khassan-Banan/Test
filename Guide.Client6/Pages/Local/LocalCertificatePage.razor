@page "/local"
@implements IDisposable
@using Guide.Client6.Services;
<ResultsLayout>
    <Top>
        <TopBar LeftDrawerTitle="تفاصيل" LeftDrawerIcon="@Icons.Material.Outlined.FilterAlt">
            <LeftDrawerBody>
                <Filters />
            </LeftDrawerBody>
        </TopBar>
    </Top>


</ResultsLayout>

@code {
    [Inject]
    private TopBarService TopBarService { get; set; }
    public void Dispose()
    {
        TopBarService.OpenLeft = false;
        TopBarService.UnLockRight();
        TopBarService.OpenRight = true;
    }
}